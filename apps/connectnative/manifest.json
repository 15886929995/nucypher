{

  "description": "Nucypher Character Control add-on",
  "manifest_version": 2,
  "name": "Nucypher",
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "applications": {
    "gecko": {
      "id": "nucypher@nucypher.com",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": ["nacl-util.js", "nacl.js", "background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "modify-content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/message.svg"
  },

  "permissions": ["nativeMessaging"]

}
